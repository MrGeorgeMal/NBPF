<Page x:Class="NBPF.Pages.Page_InitData"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NBPF.Pages"
      xmlns:usercontrols="clr-namespace:NBPF.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page_InitData">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
            </Grid.RowDefinitions>

            <usercontrols:UC_InputBox Grid.Row="0"/>
            <usercontrols:UC_InputBox Grid.Row="1"/>
            <usercontrols:UC_InputBox Grid.Row="2"/>

        </Grid>
    </ScrollViewer>
</Page>
