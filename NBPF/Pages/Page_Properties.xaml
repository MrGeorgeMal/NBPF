<Page x:Class="NBPF.Pages.Page_Properties"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NBPF.Pages"
      xmlns:usercontrols="clr-namespace:NBPF.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page_Properties">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Исходные данные синтеза" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <usercontrols:UC_InputBox x:Name="f0" Grid.Row="1"/>
            <usercontrols:UC_InputBox x:Name="Bandwidth" Grid.Row="2"/>
            <usercontrols:UC_InputBox x:Name="df" Grid.Row="3"/>
            <usercontrols:UC_SelectBox x:Name="StripStructure" Grid.Row="4"/>
            <usercontrols:UC_SelectBox x:Name="FilterStructure" Grid.Row="5"/>

        </Grid>
    </ScrollViewer>
</Page>
