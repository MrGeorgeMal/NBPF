<UserControl x:Class="NBPF.Controls.UC_InputBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NBPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="0, 5, 0, 5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Description" Grid.Column="0" Grid.RowSpan="2" VerticalAlignment="Center"/>
        <TextBox Text="0" Grid.Column="1" Grid.RowSpan="2" Margin="20, 0, 0, 0" VerticalContentAlignment="Center" HorizontalAlignment="Stretch"/>
        <Button Content="&#x25B2;" FontSize="5" Grid.Column="2" Grid.Row="0"/>
        <Button Content="&#x25BC;" FontSize="5" Grid.Column="2" Grid.Row="1"/>

    </Grid>
</UserControl>
